RewriteEngine On
RewriteBase /

# Ausnahme f√ºr die Startseite, style.css und alles im Verzeichnis /error
RewriteCond %{REQUEST_URI} !^/?$ [NC]
RewriteCond %{REQUEST_URI} !^/style\.css$ [NC]
RewriteCond %{REQUEST_URI} !^/error/ [NC]

# Alle anderen URLs auf die Fehlerseite weiterleiten
RewriteRule ^ /error/403.html [R=403,L]
